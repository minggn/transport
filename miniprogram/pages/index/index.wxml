<!--index.wxml-->
<view class="bigbak">
  <view class="bak">

    <swiper  class="swip" indicator-dots indicator-color="white" autoplay="true" interval="1800" circular="true">
        <swiper-item class="one">
        <view class="item">
        <image class="picitem" style="width: 240px; height: 120px; "  src="{{src}}"></image>
        </view>
        </swiper-item>
        <swiper-item class="two">
        <view class="item">  
        <image class="picitem" style="width: 240px; height: 120px; "  src="{{src}}"></image></view>
        </swiper-item>
    </swiper>

     <view class="journey">
     <view class="immediately">
     <view style="font-size: 24px;">中国</view>
     <view class="item">  
     <image class="picitem" style="width: 50px; height: 50px;margin-top: 36px;"  src="{{tssrc}}"></image>
     </view>
     <view style="font-size: 24px;">美国</view>
     </view>
    <button class="trport" bindtap="showview">立即转运</button>
<view class="bg" bindtap='hideview' style='display:{{display}}'></view>
<view class="show" bindtap='hideview' style='display:{{display}}'>预选渠道
    <view>
        <button bindtap="goindex">取消</button>
        <button bindtap="gonext">下一步</button>
    </view>
</view>
     </view>

<view>
    <view class="cut">  
    <view class="cutbak">
        <image class="picitem" style="width: 30px; height: 30px;margin-top: 10px;"  src="{{cust}}"></image>
    </view>
    <view class="cutfz">
    <view style="color: white;">联系客服</view>
    <view style="font-size:12px;color:#e3e2cd;">为您解决下单问题</view>
    </view>
     </view>
</view>

<view class="estimate">
<view class="Notice" bindtap="Mytice">
<view class="tice">
    <view style="font-size:20px;">转运须知</view>
    <view style="font-size: 12px;">流程和注意事项</view>
</view>
<view class="carrow">
    <image class="picitem" style="width: 50px; height: 50px;margin-top: 10px;"  src="{{arrowright}}"></image>
    <image class="picitem" style="width: 55px; height: 55px;margin-top: 10px;"  src="{{car}}"></image>
</view>
</view>

<view class="billing" bindtap="freight">
    <view class="calculate">
    <view style="font-size:20px;">运费估算</view>
    <view style="font-size: 12px;">费用心中有数</view>
</view>
<view>
    <image class="picitem" style="width: 50px; height: 50px;margin-top: 10px;"  src="{{arrowrighttwo}}"></image>
    <image class="picitem" style="width: 55px; height: 55px;margin-top: 10px;"  src="{{calculator}}"></image>
</view>
</view>

</view>

<view class="easy">
<view style="font-size:24px;margin-left: 10px;">轻松转运</view>
<view>
    <image  style="width: 100%; height: 100px;margin-top: 10px;"  src="{{process}}"></image>
</view>
</view>

<view>
<view class="btncp" bindtap="storehousecopy">
    <image  style="width: 30px; height: 30px;margin-left: 35px;"  src="{{copy}}"></image>
    <button class="cpbtn">
        复制仓库地址去购物
    </button>
</view>
<view style="color: #42ace2;font-size: 12px;text-align: center;">电商平台的收货地址请填写我们</view>
</view>

  </view>
</view>
